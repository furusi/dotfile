root=true

[*]
indent_style = space

[*.py]
indent_style = space
indent_size = 4

[{*.s,*.asm,Makefile,.config/**/config}]
indent_style = tab

[{sshcontrol,.gitignore,.projectile,rustfmt.toml}]
insert_final_newline=true
