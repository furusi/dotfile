snippet #!
	#!/usr/bin/perl
 use strict;
 use warnings;

snippet .
	 =>
snippet sub
	sub ${1:function_name} {
		${0}
	}
snippet if
	if (${1}) {
		${0}
	}
snippet ife
	if (${1}) {
		${2}
	}
	else {
		${0}
	}
snippet ifee
	if (${1}) {
		${2}
	}
	elsif (${3}) {
		${4:# elsif...}
	}
	else {
		${0}
	}
snippet eif
	elsif (${1}) {
		${0}
	}
